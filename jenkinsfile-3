pipeline {
    agent { label 'EEE'}
    triggers {
        pollSCM('* * * * *')
    }
    tools{
        jdk 'JDK_17'
        maven 'MAVEN-3.9'
    }
     stages {
        stage('vcs'){
            steps {
                git url: 'https://github.com/hemachaitanya/spring-petclinic.git',
                    branch: 'main'
            }
        }
       stage('sonarqube'){
            steps{
                sh 'mvn --version'
             withSonarQubeEnv('SONAR_CLOUD') {
                sh 'mvn clean package sonar:sonar'
                }
            }
        }
    }
}



   
